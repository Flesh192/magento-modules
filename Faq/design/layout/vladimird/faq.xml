<layout version="0.1.0">
   <default>
        <reference name="footer_links">
            <action method="addLink"><label>FAQ's</label><url>vladimird_faq</url><title>faq</title><prepare>true</prepare></action>
        </reference>
    </default>
    <vladimird_faq_index_index>
        <label>FAQ</label>
        <reference name="head">
            <action method="setTitle" module="faq"><title>FAQ</title></action>
        </reference>
        <reference name="content">
            <block type="vladimird_faq/content" name="faq" template="faq/form.phtml"/>
        </reference>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-right.phtml</template></action>
        </reference>
    </vladimird_faq_index_index>
</layout>
